{
  "settings": {
    "index" : {
      "refresh_interval" : "10s"
    },
    "analysis": {
      "analyzer": {
        "whitespace_ignore_case": {
          "type": "custom",
          "tokenizer": "whitespace",
          "char_filter": [],
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "dynamic": false,      
      "properties": {
        "id": {"type": "keyword"},
        "number": {"type": "integer"},
        "raw_number": {"type": "keyword"},        
        "text": {"type": "text", "analyzer": "simple"},
        "lemma_text": {"type": "text", "analyzer": "whitespace_ignore_case"},
        "lemma_tag_text": {"type": "text", "analyzer": "whitespace_ignore_case"},          
        "group": {"type": "keyword"}
      }
    }
  }
}
